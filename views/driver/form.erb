<form action="/drivers/<%= @driver.id  %>" method="POST">
  <div class="">
    <label>First Name</label>
    <input type="text" name="first_name" value="<%= @driver.first_name %>" placeholder="Enter First Name">
  </div>
  <div class="">
    <label>Last Name</label>
    <input type="text" name="last_name" value="<%= @driver.last_name %>" placeholder="Enter Last Name">
  </div>
  <div class="">
    <label>Email</label>
    <input type="text" name="email" value="<%= @driver.email %>" placeholder="Enter Email">
  </div>

  <div class="">
    <input type="submit" name="" value="Save driver">
  </div>

  <% if(@driver.id) %>
    <input type="hidden" name="_method" value="PUT">
  <% end %>
</form>
